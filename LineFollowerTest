#include <MeMegaPi.h>
#include <Wire.h>

MeGyro gyro;

MeMegaPiDCMotor wheel1(PORT1B);
MeMegaPiDCMotor wheel2(PORT2B);
MeMegaPiDCMotor wheel3(PORT3B);
MeLineFollower lineFinder(PORT_7); /* Line Finder module can only be connected to PORT_3, PORT_4, PORT_5, PORT_6 of base shield. */

void setup()
{
  Serial.begin(9600);
  gyro.begin();
}

void loop()
{
  int sensorState = lineFinder.readSensors();
  switch(sensorState)
  {
    case S1_IN_S2_IN: wheel1.run(60); wheel2.run(-60); break;
    case S1_IN_S2_OUT: wheel1.run(-35); wheel2.run(-60); break;
    case S1_OUT_S2_IN: wheel1.run(60); wheel2.run(35); break;
    case S1_OUT_S2_OUT: break;
    default: break;
  }
  gyro.update();
  Serial.print("X:");
  Serial.print(gyro.getAngleX() );
  Serial.print(" Y:");
  Serial.print(gyro.getAngleY() );
  Serial.print(" Z:");
  Serial.println(gyro.getAngleZ() );
//  delay(200);
}
